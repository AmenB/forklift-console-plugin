{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "strict": false,
    "noUnusedLocals": true,
    "paths": {
      "@app/*": ["pkg/web/src/app/*"]
    }
  },
  "include": ["src", "pkg"],
  "exclude": ["node_modules", "dist"]
}
