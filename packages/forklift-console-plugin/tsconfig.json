{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "src/*": ["./src/*"]
    }
  },

  "include": ["./src/**/*", "./plugin-metadata.ts", "./plugin-extensions.ts"],

  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
