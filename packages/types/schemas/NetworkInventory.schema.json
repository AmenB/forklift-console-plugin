{
  "$ref": "#/definitions/NetworkInventory",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "NetworkInventory": {
      "additionalProperties": false,
      "description": "Represents a network inventory item.",
      "properties": {
        "description": {
          "description": "The description of the network (optional).",
          "type": [
            "string",
            "null"
          ]
        },
        "id": {
          "description": "The unique identifier of the network.",
          "type": "string"
        },
        "name": {
          "description": "The display name of the network.",
          "type": "string"
        },
        "parent": {
          "anyOf": [
            {
              "$ref": "#/definitions/NetworkParent"
            },
            {
              "type": "null"
            }
          ],
          "description": "The parent network, if any (optional)."
        },
        "path": {
          "description": "The path of the network (optional).",
          "type": [
            "string",
            "null"
          ]
        },
        "revision": {
          "description": "The revision number of the network.",
          "type": "number"
        },
        "selfLink": {
          "description": "The self link of the network.",
          "type": "string"
        },
        "variant": {
          "description": "The variant of the network (optional).",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "id",
        "revision",
        "name",
        "selfLink"
      ],
      "type": "object"
    },
    "NetworkParent": {
      "additionalProperties": false,
      "description": "Represents a network parent item.",
      "properties": {
        "id": {
          "description": "The unique identifier of the parent network.",
          "type": "string"
        },
        "kind": {
          "description": "The kind of the parent network.",
          "type": "string"
        }
      },
      "required": [
        "kind",
        "id"
      ],
      "type": "object"
    }
  }
}